<div class="text-center">
  <div class="col-md-4 offset-md-4 mt-4">
    <%= render 'shared/flash_messages' %>
  </div>

  <h1>
    <div class="border-bottom pb-5 mx-5">
      <%= current_date %>
    </div>
  </h1>

  <% if current_user.ynab_connected? %>
    <div class="d-flex flex-wrap justify-content-center mt-4">
      <div class="col-md-3 text-info font-weight-bold border-right">
        <%= render partial: 'card', locals: { title: current_user.net_worth, subtitle: 'Net Worth' } %>
      </div>

      <div class="col-md-3 text-success">
        <%= render partial: 'card', locals: { title: current_user.current_month_income, subtitle: 'Income' } %>
      </div>

      <div class="col-md-3 text-danger">
        <%= render partial: 'card', locals: { title: current_user.current_month_expense, subtitle: 'Expenses' } %>
      </div>
    </div>

    <div class="d-flex flex-wrap justify-content-center mt-5">
      <div class="col-md-6">
        <%= render 'cashflow' %>
      </div>

      <div class="col-md-6">
        <%= render 'bank_balances' %>
      </div>
    </div>
  <% else %>
    <div class="col-md-4 offset-md-4 mt-4  text-left">
      <div class="text-center mb-4">
        <%= link_to 'Connect YNAB', ynab_oauth_url, class: 'btn btn-info mr-2' %>
      </div>
      <%= render 'shared/ynab_not_connected' %>
    </div>
  <% end %>
</div>
