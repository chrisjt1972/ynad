<%= form_tag root_path, method: :get, class: 'form-inline' do |f| %>
  <%= select_tag(
    'budget_id',
    options_from_collection_for_select(
      current_user.budgets,
      'id',
      'name',
      selected: (params[:budget_id] || current_user.primary_budget.id)
    ),
    class: 'form-control mr-2'
  ) %>

  <%= button_tag type: :submit, value: :commit, class: 'btn btn-info' do %>
    <%= icon('fas', 'filter') %>&nbsp; Filter
  <% end %>
<% end %>
