<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to 'YNAD.', root_path, class: 'navbar-brand' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <% if user_signed_in? %>
      <ul class="navbar-nav ml-auto">
        <% if current_user.ynab_connected? %>
          <li><%= render 'shared/add_friend' %></li>
          <li><%= render 'shared/refresh_ynab_button' %></li>
        <% else %>
          <li><%= link_to 'Connect YNAB', ynab_oauth_url, class: 'btn btn-info mr-2' %></li>
        <% end %>
        <li class="nav-item dropdown">
          <%= link_to current_user.first_name, '', class: 'nav-link dropdown-toggle', id: 'navbarDropdown', data: { toggle: 'dropdown' }, aria: { haspopup: 'true', expanded: 'false' } %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to 'Account', settings_path, class: 'dropdown-item' %>
            <div class="dropdown-divider"></div>
            <%= link_to 'Logout', destroy_user_session_path, class: 'dropdown-item', method: :delete %>
          </div>
        </li>
      </ul>
    <% end %>
  </div>
</nav>
