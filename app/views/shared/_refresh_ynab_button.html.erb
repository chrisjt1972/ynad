<% if ynab_api_limit_reached? %>
  <%= link_to 'Why can\'t I refresh YNAB?', '', class: 'nav-link text-info',
  data: { toggle: 'tooltip', placement: 'bottom', title: ynab_api_limit_reached_tooltip }
%>

<% else %>
  <%= link_to(
    import_path,
    method: :post,
    class: 'btn btn-info mr-2',
    title: 'Sync YNAB data'
  ) do %>
    <%= icon('fas', 'sync') %>&nbsp; YNAB Data
  <% end %>
<% end %>

